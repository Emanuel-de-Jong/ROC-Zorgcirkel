@model Zorgcirckel.Models.Contacten

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Contacten</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PatientID)

        <div class="form-group">
            Geef hier het e-mail van de contact persoon die u toe wilt voegen.
            <div class="col-md-10">
                <input type="email" id="email" name="email" />
            </div>
        </div>

        <div class="form-group">
            Geef hier de relatie die u met deze persoon heeft.
            <div class="col-md-10">
                @Html.EditorFor(model => model.Relatie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Relatie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Laat in een getal weten hoe belangrijk het is dat deze persoon te horen krijgt als er iets gebeurt (van 1 tot 10 waar 10 maximale prioritijd is).
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contactpersoon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contactpersoon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
